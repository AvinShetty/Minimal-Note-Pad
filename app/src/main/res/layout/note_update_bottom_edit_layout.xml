<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MyBottomLinear"
    android:layout_height="40dp"
    android:visibility="gone">

    <View
        android:layout_width="15dp"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/update_note_bold"
        style="@style/MyImageViewSheet"
        android:src="@drawable/bold" />

    <View
        android:layout_width="20dp"
        android:layout_height="match_parent" />


    <ImageView
        android:id="@+id/update_note_italic"
        style="@style/MyImageViewSheet"
        android:src="@drawable/italic" />


    <View
        android:layout_width="20dp"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/update_note_textPlus"
        style="@style/MyImageViewSheet"
        android:src="@drawable/text_plus" />

    <View
        android:layout_width="20dp"
        android:layout_height="match_parent" />


    <ImageView
        android:id="@+id/update_note_textMinus"
        style="@style/MyImageViewSheet"
        android:src="@drawable/text_minus" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/update_note_default_all"
            style="@style/MyResetBtn"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:textSize="16sp" />

    </RelativeLayout>


</LinearLayout>